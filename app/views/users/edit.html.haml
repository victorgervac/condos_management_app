%div.px-5.bg-zinc-900.min-h-screen.text-white
  .xl:col-span-6.col-span-12.bg-zinc-800.shadow-xl.rounded-2xl.p-6
    = form_with model: @user, url: user_path, class: "space-y-6" do |form|
      .flex.justify-between.items-center.mb-6
        %h2.text-2xl.font-semibold.text-white 
          %i.ri-code-line.ml-2

      .grid.grid-cols-12.gap-6
        .md:col-span-6.col-span-12
          %label.form-label.block.mb-2.text-sm.font-medium First Name
          = form.text_field :first_name, class: "form-control w-full rounded-lg border border-zinc-700 bg-zinc-700 text-white placeholder:text-zinc-400 focus:ring-2 focus:ring-indigo-500"

        .md:col-span-6.col-span-12
          %label.form-label.block.mb-2.text-sm.font-medium Last Name
          = form.text_field :last_name, class: "form-control w-full rounded-lg border border-zinc-700 bg-zinc-700 text-white placeholder:text-zinc-400 focus:ring-2 focus:ring-indigo-500"

        .md:col-span-12
          %label.form-label.block.mb-2.text-sm.font-medium Address
          .grid.grid-cols-12.gap-4
            .col-span-12
              %input.form-control.w-full.rounded-lg.border.border-zinc-700.bg-zinc-700.text-white.placeholder:text-zinc-400{:placeholder => "Street", :type => "text"}/
            .col-span-12
              %input.form-control.w-full.rounded-lg.border.border-zinc-700.bg-zinc-700.text-white.placeholder:text-zinc-400{:placeholder => "Landmark", :type => "text"}/
            .md:col-span-6.col-span-12
              %input.form-control.w-full.rounded-lg.border.border-zinc-700.bg-zinc-700.text-white.placeholder:text-zinc-400{:placeholder => "City", :type => "text"}/
            .md:col-span-6.col-span-12
              %select.form-select.w-full.rounded-lg.border.border-zinc-700.bg-zinc-700.text-white
                %option{:selected => "selected"} State
                %option ...
            .md:col-span-6.col-span-12
              %input.form-control.w-full.rounded-lg.border.border-zinc-700.bg-zinc-700.text-white.placeholder:text-zinc-400{:placeholder => "Postal/Zip code", :type => "text"}/
            .md:col-span-6.col-span-12
              %select.form-select.w-full.rounded-lg.border.border-zinc-700.bg-zinc-700.text-white
                %option{:selected => "selected"} Country
                %option ...

        .md:col-span-6.col-span-12
          %label.form-label.block.mb-2.text-sm.font-medium Email
          = form.text_field :email, placeholder: "email", class: "form-control w-full rounded-lg border border-zinc-700 bg-zinc-700 text-white placeholder:text-zinc-400 focus:ring-2 focus:ring-indigo-500"

        .md:col-span-6.col-span-12
          %label.form-label.block.mb-2.text-sm.font-medium Contact Number
          %input.form-control.w-full.rounded-lg.border.border-zinc-700.bg-zinc-700.text-white.placeholder:text-zinc-400{:placeholder => "Phone number", :type => "number"}/

        .md:col-span-6.col-span-12
          %label.form-label.block.mb-2.text-sm.font-medium Alternative Contact
          %input.form-control.w-full.rounded-lg.border.border-zinc-700.bg-zinc-700.text-white.placeholder:text-zinc-400{:placeholder => "Phone number", :type => "number"}/


        .md:col-span-12.col-span-12
          = form.button "Submit", class: "mt-4 px-6 py-3 bg-indigo-600 hover:bg-indigo-500 text-white font-semibold rounded-lg shadow-md transition-all duration-200"
